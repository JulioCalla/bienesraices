extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center JBC 
            span.font-normal ROOFING 
                span.text-4xl.my-10.font-extrabold.text-center LLC
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class = "max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method = "POST" action = "https://formsubmit.co/juliocalla380@gmail.com" noValidate) 
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for = "nombre") Tu nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name = "nombre")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for = "email") Correo
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name = "email")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for = "subject") Asunto
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name = "subject")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for = "comments") Comentario
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name = "comments")
                    input(class = "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value = "Enviar Correo")